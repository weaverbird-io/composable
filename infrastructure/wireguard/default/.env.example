# Server URL (your public domain or IP)
WG_SERVER_URL=vpn.example.com

# WireGuard port (default 51820)
WG_PORT=51820

# Number of peer configs to generate
WG_PEERS=3

# DNS server for clients
WG_DNS=1.1.1.1

# Internal VPN subnet
WG_SUBNET=10.13.13.0

# Allowed IPs for clients (0.0.0.0/0 = route all traffic)
WG_ALLOWED_IPS=0.0.0.0/0
