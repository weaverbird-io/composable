# Mail-in-a-Box hostname (FQDN - usually box.yourdomain.com)
MIAB_HOSTNAME=box.example.com

# Admin email address
MIAB_EMAIL=admin@example.com

# LXD container name
MIAB_CONTAINER_NAME=mailinabox

# Container resources
MIAB_MEMORY=2GB

# Static IP for LXD container (on miabbr0 network 10.100.100.0/24)
MIAB_STATIC_IP=10.100.100.10

# Traefik config directory (for automatic routing setup)
TRAEFIK_CONFIG_DIR=/opt/infra-services/infrastructure/traefik/default/config
